- var title= 'Gistbot Home'
- var description = 'Welcome to Gistbot, a productivity app to quickly get the main ideas behind an article or topic'
- var templateName = 'home'

include templates/head.jade
  body
    #header.header.absolute
      .container
        h2.intro
          | Paste a link or type anything&nbsp;
          span.nw to get the&nbsp;gist
        .input-container
          input#get.input(type='text', name='Gistbot', placeholder='i.e. Nikola Tesla or http://arstechnica.com/business/2016/02/twitters-monthly-active-user-base-shrunk-in-q4/')
          include templates/svg/search.svg
      include templates/logo.jade
    .container
      .row
        #gist.gists
    include templates/footer.jade
    script
      include templates/js/plugins.js
