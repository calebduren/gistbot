include templates/head.jade
  var desc: "Gistbot is a productivity app to help you get the bullet points of an article or topic"
  body
    .brand-border
    #brandBar.brand
      .brand-container
        .logo-container
          h1#logo-light.logo-light Gistbot
            span.version.version-dark-bg ALPHA
          h1#logo-dark.logo-dark.left Gistbot
            span.version.version-light-bg ALPHA
    #header.header
      .intro-container
        .welcome-container
          #welcome.welcome
            h3.welcome-heading
              span.hidden-sm Welcome to Gistbot!&nbsp;
              | This site can summarize articles or&nbsp;
              span.nw briefly describe just about any topic
              span.hidden-sm .
              button#close-top.close-top(aria-hidden='true') &times;
        h2#intro.intro-text
          | Paste a link or type anything&nbsp;
          span.nw to get the gist
    .container
      .row
        form#gistInput.form
          input#getGist.gistInput(type='text', name='Gistbot', placeholder='i.e. Nikola Tesla or http://www.wired.com/2015/02/fcc-chairman-wheeler-net-neutrality/')
          button#gist.gistButton(type='button', value='checkvalue')
            | get the gist
        #theGist.gists
    include templates/footer.jade
